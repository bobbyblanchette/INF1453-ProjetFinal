<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button aria-controls="navbar-default" aria-expanded="false" class="navbar-toggle collapsed" data-target="#main-navbar" data-toggle="collapse" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href='@Url.Action("Index", "Home")'>
                    <img class ="logo" src='@Url.Content("~/Content/Images/Ebook-Logo.png")' />
                </a>
            </div>
            <div class="navbar-collapse collapse" id="main-navbar" aria-expanded="false">
                @Html.Partial("_LoginPartial")

                @using (Html.BeginForm("Index", "Home", new { Area = "" }, FormMethod.Post, new { @class = "navbar-form" }))
                {
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" name="searchString" placeholder="Recherche" class="form-control">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Atlas Corporation</p>
        </footer>
    </div>

    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/paypal/express_checkout.js")
    @Scripts.Render("https://www.paypalobjects.com/api/checkout.js")
    @RenderSection("scripts", required: false)
</body>
</html>
